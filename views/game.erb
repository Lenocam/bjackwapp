<h1>Blackjack</h1>

<p>Hello, <%= session[:new_player] %></p>




<div class="well"><h6><span class="label label-inverse">Dealer's Cards</span></h6>
<ul>
  <% session[:dealer_cards].each do |card| %>
    <li><%= card.to_s %></li>
  <%end%>
</ul></div>

<br>

<div class="well"><h6><span class="label label-inverse"><%=session[:new_player]%>'s Cards:</span> </h6>
<ul>
  <% session[:player_cards].each do |card| %>
    <li><%= card.to_s %></li>
  <%end%>
</ul></div>


<p>
  <%= session[:new_player]%>'s card total is <b><%= calculate(session[:player_cards])%></b>

<%if @show_buttons%>

<form action="/game/player/hit" method='post'>
  <input type="submit" class="btn btn-primary" value="Hit"/>
</form>

<form action="/game/player/stay" method='post'>
  <input type="submit" class="btn btn-primary" value="Stay"/>
</form>
<%end%>
</p>





